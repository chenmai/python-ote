import mysql.connector;

try:
    conn = mysql.connector.connect(host='localhost', port='3306', user='root', password="123456", database="test", use_unicode=True);
    cursor = conn.cursor();
    cursor.execute('select * from chenmai where ID =4');
    # 取回的是列表，列表中包含元组
    list = cursor.fetchall();
    print (list);

    for record in list:
        print ("Record %d is %s!" % (record[0], record[1]));
    cursor.execute('INSERT INTO chenmai VALUES(6,2016-05-18,0,2016-05-18 22:11:55,测试更新)')
    

except mysql.connector.Error as e:
    print ('Error : {}'.format(e));
finally:
    cursor.close;
    conn.close;
    print ('Connection closed in finally');
